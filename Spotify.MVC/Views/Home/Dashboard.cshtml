@{
    ViewData["Title"] = "Beathouse - Tu Biblioteca Musical";
}

<link rel="stylesheet" href="~/css/dashboard - Copia.css">

<div class="contenedor">
    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="logo">⚡ Beathouse</div>

        <a asp-controller="Playlists" asp-action="Create" class="boton-crear">
            + Crear
        </a>

        <a asp-controller="Usuarios" asp-action="EditarPerfil" class="menu-item">
            👤 Perfil
        </a>

        <a asp-controller="Canciones" asp-action="Index" class="menu-item">
            🎵 Tus canciones
        </a>

        <a asp-controller="Playlists" asp-action="Index" class="menu-item">
            📚 Tu biblioteca
        </a>

        <div class="biblioteca-titulo">Tu biblioteca</div>

        <div class="cancion-item">
            <div class="icono-cancion">❤️</div>
            <div class="info-cancion">
                <div class="nombre-cancion">Canciones que te gustan</div>
                <div class="tipo-cancion">Lista • 13 canciones</div>
            </div>
        </div>

        <div class="cancion-item">
            <div class="icono-cancion">🎵</div>
            <div class="info-cancion">
                <div class="nombre-cancion">phonk</div>
                <div class="tipo-cancion">Lista • Spotify</div>
            </div>
        </div>

        <div class="cancion-item">
            <div class="icono-cancion">🎮</div>
            <div class="info-cancion">
                <div class="nombre-cancion">Arcane League of Legends</div>
                <div class="tipo-cancion">Álbum • Arcane</div>
            </div>
        </div>

        <div class="cancion-item">
            <div class="icono-cancion">👤</div>
            <div class="info-cancion">
                <div class="nombre-cancion">Lil Peep</div>
                <div class="tipo-cancion">Artista</div>
            </div>
        </div>

        <div class="cancion-item">
            <div class="icono-cancion">👤</div>
            <div class="info-cancion">
                <div class="nombre-cancion">Slipknot</div>
                <div class="tipo-cancion">Artista</div>
            </div>
        </div>
    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="contenido">
        <div class="header">
            <div class="botones-nav">
                <button class="btn-nav">←</button>
                <button class="btn-nav">→</button>
            </div>

            <div class="header-derecha">
                <a asp-controller="Planes" asp-action="RecargarSaldo" class="btn-recargar-header">
                    Recargar Saldo
                </a>
                <a asp-controller="Planes" asp-action="Index" class="btn-premium">
                    Descubrir Premium
                </a>
                <button class="btn-perfil">
                    @Model.Nombre.Substring(0, 1).ToUpper()
                </button>
                <label>Logout</label>
                <a asp-controller="Home" asp-action="Logout" class="btn-logout">
                    🚪
                </a>
            </div>
        </div>

        <!-- Información del Plan y Saldo -->
        <div class="seccion-plan">
            @if (Model.Plan != null)
            {
                <p><strong>Tu plan actual:</strong> @Model.Plan.Nombre</p>
                <p><strong>Precio del plan:</strong> $@Model.Plan.PrecioMensual</p>
            }
            else
            {
                <p>No tienes ningún plan asignado.</p>
            }
        </div>

        <div class="seccion-saldo">
            <h2>Tu Saldo</h2>
            <p class="saldo-actual">Saldo Actual: $@Model.Saldo.ToString("F2")</p>
            <a asp-controller="Planes" asp-action="RecargarSaldo" class="btn-recargar">
                Recargar Saldo
            </a>
        </div>

        <!-- Contenido Destacado -->
        <div class="seccion-destacada">
            <div class="item-destacado">
                <div class="cover-destacado phonk">🎵</div>
                <div class="info-destacado">
                    <h3>phonk</h3>
                </div>
            </div>

            <div class="item-destacado">
                <div class="cover-destacado arcane">🎮</div>
                <div class="info-destacado">
                    <h3>Arcane League of Legends: Season 2</h3>
                    <p>Soundtrack from the Animated Series</p>
                </div>
            </div>
        </div>

        <!-- Hecho para el Usuario -->
        <div class="seccion">
            <div class="titulo-seccion">
                <h2>Hecho para Dylan</h2>
                <button class="btn-mostrar-todo">Mostrar todos</button>
            </div>

            <div class="tarjetas">
                <div class="tarjeta">
                    <div class="icono-tarjeta mix1">🎵</div>
                    <div class="nombre-tarjeta">Mix diario 1</div>
                    <div class="descripcion-tarjeta">HI$TED, Eternxlkz, DJZRX y más</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta mix2">🎵</div>
                    <div class="nombre-tarjeta">Mix diario 2</div>
                    <div class="descripcion-tarjeta">Kordhell, 2KE, SXID y más</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta mix3">🎵</div>
                    <div class="nombre-tarjeta">Mix diario 3</div>
                    <div class="descripcion-tarjeta">Lil Peep, RØN1N, XXXTENTACION y más</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta mix4">🎵</div>
                    <div class="nombre-tarjeta">Mix diario 4</div>
                    <div class="descripcion-tarjeta">Slipknot, System Of A Down</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta discovery">🔍</div>
                    <div class="nombre-tarjeta">Descubrimiento Semanal</div>
                    <div class="descripcion-tarjeta">Joyas ocultas y canciones que no...</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta radar">📡</div>
                    <div class="nombre-tarjeta">Radar de Novedades</div>
                    <div class="descripcion-tarjeta">Las novedades de artistas</div>
                </div>
            </div>
        </div>

        <!-- Recomendaciones -->
        <div class="seccion">
            <div class="titulo-seccion">
                <h2>Descubre recomendaciones para ti</h2>
                <button class="btn-mostrar-todo">Mostrar todos</button>
            </div>

            <div class="tarjetas">
                <div class="tarjeta">
                    <div class="icono-tarjeta rec1">⚡</div>
                    <div class="nombre-tarjeta">Cyberpunk Beats</div>
                    <div class="descripcion-tarjeta">Música electrónica futurista</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta rec2">🎌</div>
                    <div class="nombre-tarjeta">Anime Soundtracks</div>
                    <div class="descripcion-tarjeta">Los mejores OSTs de anime</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta rec3">🇧🇷</div>
                    <div class="nombre-tarjeta">Montagem Brasileira</div>
                    <div class="descripcion-tarjeta">Lo mejor del funk brasileño</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta rec4">🌃</div>
                    <div class="nombre-tarjeta">Synthwave Nights</div>
                    <div class="descripcion-tarjeta">Sonidos retro-futuristas</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta rec5">🎮</div>
                    <div class="nombre-tarjeta">Gaming Anthems</div>
                    <div class="descripcion-tarjeta">Música épica para gamers</div>
                </div>

                <div class="tarjeta">
                    <div class="icono-tarjeta rec6">🤖</div>
                    <div class="nombre-tarjeta">EVA-01 Vibes</div>
                    <div class="descripcion-tarjeta">Música inspirada en Evangelion</div>
                </div>
            </div>
        </div>
    </div>
</div>

