@{
    ViewData["Title"] = "Dashboard Artista";
}

<h2>Bienvenido al Dashboard, @User.Identity.Name</h2>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Sube tu música</h4>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="SubirMusica">
                    <div class="form-group">
                        <label for="cancionTitulo">Título de la Canción</label>
                        <input type="text" class="form-control" id="cancionTitulo" name="cancionTitulo" required placeholder="Introduce el título de la canción">
                    </div>
                    <div class="form-group">
                        <label for="archivoCancion">Selecciona la canción (mp3, wav)</label>
                        <input type="file" class="form-control" id="archivoCancion" name="archivoCancion" accept=".mp3,.wav" required>
                    </div>
                    <div class="form-group">
                        <label for="descripcion">Descripción</label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="3" placeholder="Escribe una descripción para la canción (opcional)"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Subir Canción</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Crea tu álbum</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="CrearAlbum">
                    <div class="form-group">
                        <label for="albumTitulo">Título del Álbum</label>
                        <input type="text" class="form-control" id="albumTitulo" name="albumTitulo" required placeholder="Introduce el título del álbum">
                    </div>
                    <div class="form-group">
                        <label for="portadaAlbum">Sube la portada del álbum</label>
                        <input type="file" class="form-control" id="portadaAlbum" name="portadaAlbum" accept="image/*" required>
                    </div>
                    <div class="form-group">
                        <label for="descripcionAlbum">Descripción del Álbum</label>
                        <textarea class="form-control" id="descripcionAlbum" name="descripcionAlbum" rows="3" placeholder="Escribe una descripción para el álbum (opcional)"></textarea>
                    </div>

                    <button type="button" class="btn btn-primary mt-3" onclick="location.href='@Url.Action("Create", "Albums")'">Crear Álbum</button>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <h5>Mis Álbumes y Canciones</h5>
    <p>Aquí podrás ver todos los álbumes y canciones que has subido.</p>
    <!-- Aquí se pueden listar las canciones y álbumes subidos del artista -->
</div>

